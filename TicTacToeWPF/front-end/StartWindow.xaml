<Window x:Class="TicTacToe_WPF.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartWindow" Height="320" Width="320">
    <Grid Margin="0,0,0,0" Height="320" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="160*"/>
        </Grid.ColumnDefinitions>
        <Button Name="P2P" Content="user-user" HorizontalAlignment="center" Height="40" Margin="80,38,80,0" 
                VerticalAlignment="Top" Width="150" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" FontSize="16" ClipToBounds="True" SnapsToDevicePixels="True" Grid.ColumnSpan="2" Click="P2P_Click"/>
        <Button Name="P2C" Content="user-computer" HorizontalAlignment="center" Height="40" Margin="80,116,80,0" 
        	VerticalAlignment="Top" Width="150" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" FontSize="16" ClipToBounds="True" SnapsToDevicePixels="True" Grid.ColumnSpan="2" Click="P2C_Click"/>
        <Button Name="RESUME" Content="resume game" HorizontalAlignment="center" Height="40" Margin="80,200,80,0" 
        	VerticalAlignment="Top" Width="150" FontFamily="Arial Rounded MT Bold" FontSize="16" FontWeight="Bold" ClipToBounds="True" SnapsToDevicePixels="True" Grid.ColumnSpan="2" Click="RESUME_Click"/>

    </Grid>
</Window>
